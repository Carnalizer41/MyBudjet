<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <TextView
        android:id="@+id/reportDate"
        android:layout_width="154dp"
        android:layout_height="34dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#A5A5A5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <TextView
        android:id="@+id/reportName"
        android:layout_width="192dp"
        android:layout_height="34dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#A5A5A5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/reportDate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <ImageButton
        android:id="@+id/deleteReportBtn"
        android:layout_width="36dp"
        android:layout_height="33dp"
        android:background="@android:color/transparent"
        android:onClick="onClickDeleteReport"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/reportName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/reportInfoBtn"
        android:layout_width="342dp"
        android:layout_height="34dp"
        android:background="@android:color/transparent"
        android:onClick="onClickReportInfo"
        app:layout_constraintBottom_toBottomOf="@+id/reportName"
        app:layout_constraintEnd_toEndOf="@+id/reportName"
        app:layout_constraintStart_toStartOf="@+id/reportDate"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>